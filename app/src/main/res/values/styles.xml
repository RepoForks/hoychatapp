<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="MyTheme"
        parent="Theme.Sherlock">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="windowContentOverlay">@null</item>
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_purple</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="DialogStyleLight.Custom">
        <item name="titleTextColor">@color/color_purple</item>
        <item name="titleSeparatorColor">@color/color_purple</item>
        <item name="messageTextColor">@color/color_purple</item>
        <item name="buttonTextColor">@color/color_purple_more_light</item>
        <item name="buttonSeparatorColor">@color/color_purple_more_light</item>
        <item name="buttonBackgroundColorPressed">@color/color_purple</item>
        <item name="buttonBackgroundColorFocused">@color/color_purple</item>
    </style>


</resources>
